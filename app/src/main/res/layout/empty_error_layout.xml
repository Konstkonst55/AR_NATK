<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivEmptyError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_empty_box"
        android:background="@drawable/bg_progress_bar"
        android:padding="10dp"
        android:contentDescription="@string/cd_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEmptyError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/t_empty_error"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivEmptyError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>